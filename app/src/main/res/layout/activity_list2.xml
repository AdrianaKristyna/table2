<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategorie 2"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <TableRow
                android:layout_height="1px"
                android:background="#BDBDBD">z

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Cena za kategorii:" />

                <TextView
                    android:id="@+id/priceCategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="0"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </TableRow>

            <TableRow
                android:layout_height="1px"
                android:background="#BDBDBD">z

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Cena za kategorie celkem:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="0"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </TableRow>


        </TableLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


            <TableRow
                android:layout_height="1px"
                android:background="#BDBDBD">z

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Name of product" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Kč" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />
            </TableRow>


            <TableRow
                android:background="#F0F7F7"
                android:padding="5dp">


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="Produkt1" />

                <TextView
                    android:id="@+id/priceProduct"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100" />

                <Button
                    android:id="@+id/min1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/productValue1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0" />

                <Button
                    android:id="@+id/plus1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center"

                    android:text="+" />


            </TableRow>


            <TableRow
                android:background="#F0F7F7"
                android:padding="5dp">


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="Produkt2" />

                <TextView
                    android:id="@+id/priceProduct2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="80" />

                <Button
                    android:id="@+id/min2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/productValue2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0" />

                <Button
                    android:id="@+id/plus2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"

                    android:text="+" />


            </TableRow>

            <TableRow
                android:background="#F0F7F7"
                android:padding="5dp">


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="Product3" />

                <TextView
                    android:id="@+id/priceProduct3"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="60" />

                <Button
                    android:id="@+id/min3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/productValue3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0" />

                <Button
                    android:id="@+id/plus3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"

                    android:text="+" />


            </TableRow>

            <TableRow
                android:background="#F0F7F7"
                android:padding="5dp">


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="Product4" />

                <TextView
                    android:id="@+id/priceProduct4"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="40" />

                <Button
                    android:id="@+id/min4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/productValue4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0" />

                <Button
                    android:id="@+id/plus4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"

                    android:text="+" />


            </TableRow>

            <TableRow
                android:background="#F0F7F7"
                android:padding="5dp">


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:text="Product5" />

                <TextView
                    android:id="@+id/priceProduct5"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10" />

                <Button
                    android:id="@+id/min5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/productValue5"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0" />

                <Button
                    android:id="@+id/plus5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"

                    android:text="+" />


            </TableRow>


        </TableLayout>
    </LinearLayout>

</ScrollView>

